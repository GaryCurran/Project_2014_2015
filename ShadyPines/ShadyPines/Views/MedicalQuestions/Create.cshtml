@model ShadyPines.Models.MedicalQuestion

@{
  
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    
    <div class="form-horizontal">
        <h4>Daily medical report for @ViewBag.name</h4>
        <hr />
        @*pass the id of patient back to create post*@
        <div class="form-group">
            @*@Html.LabelFor(Model => Model.patient.PatientID, new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.DisplayFor(Model => Model.patient.PatientID)
                @Html.HiddenFor(model => Model.patient.PatientID)
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Question1, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.EnumDropDownListFor(model => model.Question1, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Question1, "", new { @class = "text-danger" })
            </div>
        </div>

       <div class="form-group">
            @Html.LabelFor(model => model.Question2, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.EnumDropDownListFor(model => model.Question2, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Question2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NurseTaken, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.NurseTaken, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NurseTaken, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Report" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

